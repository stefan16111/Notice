{% extends '@App/base.html.twig' %}

{% block body %}
    <div class="row">
        <div class=" col-md-offset-4 col-md-4 ">
            <h1>Panel Admina</h1>
        </div>
    </div>
    <div class="row">
        <div class=" col-md-6 ">
            <h3>Użytkownicy</h3>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Username</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col-md-6">
            <h3>Lista Kategorii</h3>
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.id }}</a></td>
                        <td>{{ category.name }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('categories_edit', { 'id': category.id }) }}">edytuj</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <ul>
                <li>
                    <a href="{{ path('categories_new') }}">Stwórz nową kategorie</a>
                </li>
            </ul>
        </div>

        </div>
    </div>
{% endblock %}
